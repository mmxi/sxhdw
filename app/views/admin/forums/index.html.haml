= render :partial => "widget/flashmessage"
%ul.table
  - @forums.each do |forum|
    %li{:class => cycle("odd", "even")}
      - if forum.parent_id == nil
        = link_to forum.name, [:admin, forum], :class => "forum"
      - else
        = link_to forum.name, [:admin, forum], :class => "subforum"
      %span.operate
        位置: #{forum.position} |
        \#{link_to "编辑", edit_admin_forum_path(forum)} | #{link_to "删除", [:admin, forum], :confirm => "确定删除", :method => :delete}
- content_for :side do
  = link_to "创建新版块", new_admin_forum_path, :class => "green"
