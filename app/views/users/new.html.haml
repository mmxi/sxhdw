%h2 用户注册
= form_for @user, :html => {:class => "front_form register_box"}, :validate => true do |f|
  = render :partial => "widget/flashmessage"
  .clearfix
    = f.label :login, "用户名：", :class => "fl"
    = f.text_field :login, :class => "input_m"
  .clearfix
    = f.label :email, "邮箱："
    = f.text_field :email, :class => "input_m"
  .clearfix
    = f.label :password, "密码："
    = f.password_field :password, :class => "input_m"
  .clearfix
    = f.label :password_confirmation, "确认密码："
    = f.password_field :password_confirmation, :class => "input_m"
  .clearfix
    = sex_button_tag "注册", :type => "submit", :class => "green-button"

- content_for :sidebar do
  = render "widget/oauth"
