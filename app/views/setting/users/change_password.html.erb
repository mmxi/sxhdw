<div id="mainbar" class="grid_10">
<%= form_for @user, :url => change_password_setting_account_path, :html => {:class => "form"} do |f| %>
	<%= render :partial => "widget/flashmessage" %>
	<div class="clearfix">
		<%= f.label :password, "新密码：" %>
		<div class="input"><%= f.password_field :password %></div>
	</div>
	<div class="clearfix">
		<%= f.label :password_confirmation, "确认密码：" %>
		<div class="input"><%= f.password_field :password_confirmation %></div>
	</div>
	<div class="clearfix">
		<div class="indent"><%= f.submit "确认修改", :class => "button bbutton" %></div>
	</div>
<% end %>
</div>

<div id="sidebar" class="grid_6">
	<h3>个人资料</h3>
	<p>该信息将出现在你的公开个人资料、搜索结果等地方。</p>
</div>
